<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos que ya teníamos -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Zoonari"
        tools:targetApi="31">

        <!-- ===== INICIO DE LA CORRECCIÓN ===== -->

        <!-- 1. PrincipalActivity vuelve a ser la pantalla de inicio (LAUNCHER) -->
        <activity
            android:name=".PrincipalActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 2. El resto de las actividades son internas -->
        <activity android:name=".InicioSesionActivity" android:exported="false" />
        <activity android:name=".SegundaPantallaActivity" android:exported="false" />
        <activity android:name=".RegistrarseActivity" android:exported="false" />
        <activity android:name=".SonidoActivity" android:exported="false" />

        <!-- ===== FIN DE LA CORRECIÓN ===== -->

    </application>
</manifest>
